{
  "name": "utm-subscription-backend",
  "version": "1.0.0",
  "description": "Backend API for UTM Authentication and Subscription System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "./scripts/setup-complete.sh",
    "setup:firebase": "./scripts/setup-firebase.sh",
    "setup:stripe": "./scripts/setup-stripe.sh",
    "setup:db": "node scripts/setup-database.js",
    "deploy": "./scripts/deploy.sh",
    "deploy:gcloud": "./scripts/deploy.sh gcloud",
    "deploy:docker": "./scripts/deploy.sh docker",
    "deploy:pm2": "./scripts/deploy.sh pm2"
  },
  "keywords": [
    "utm",
    "subscription",
    "backend",
    "api",
    "firebase",
    "stripe",
    "authentication",
    "payment"
  ],
  "author": "UTM Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/utm-subscription-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/utm-subscription-backend/issues"
  },
  "homepage": "https://github.com/your-org/utm-subscription-backend#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.11.0",
    "stripe": "^14.7.0",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  }
}